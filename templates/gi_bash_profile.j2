# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# User specific environment and startup programs

export TMP=/tmp
export TMPDIR=$TMP

export ORACLE_BASE={{ GRID_BASE }}
export ORACLE_HOME={{ GRID_HOME }}
export ORA_INVENTORY={{ ORA_INVENTORY }}
export ORACLE_SID={{ GRID_SID }}

export PATH=/usr/sbin:/usr/local/bin:$PATH
export PATH={{ GRID_HOME }}/bin:{{ GRID_HOME }}/OPatch:$PATH

export LD_LIBRARY_PATH={{ GRID_HOME }}/lib:/lib:/usr/lib
export CLASSPATH={{ GRID_HOME }}/jlib:{{ GRID_HOME }}/rdbms/jlib
